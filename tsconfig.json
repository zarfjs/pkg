{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"paths": {
			"~/*": ["./src/*"]
		},

		// so that if your project isn't using TypeScript, it still has autocomplete
		"allowJs": true,

		// "bun-types" is the important part
		"types": ["bun-types"],
		"outDir": "dist/"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist/", "deno_dist/", "src/**/*.deno.ts"]
}
